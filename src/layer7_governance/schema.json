{
  "$metadata": {
    "name": "Layer7GovernanceEnvelope",
    "version": "1.0.0",
    "description": "Governance decisions for ledger anchoring"
  },
  "schema": {
    "type": "object",
    "required": ["layerId", "governanceDecision", "dignityCompliance", "hash"],
    "properties": {
      "layerId": {"type": "string"},
      "governanceDecision": {
        "type": "object",
        "required": ["summary", "temporalSeal", "governanceClauses"],
        "properties": {
          "summary": {"type": "string"},
          "temporalSeal": {"type": "string"},
          "aeipDigest": {"type": "object"},
          "governanceClauses": {"type": "array", "items": {"type": "string"}}
        }
      },
      "dignityCompliance": {"type": "boolean"},
      "hash": {"type": "string"}
    }
  }
}
