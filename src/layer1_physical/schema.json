{
  "$metadata": {
    "name": "Layer1PhysicalEnvelope",
    "version": "1.0.0",
    "description": "Normalised telemetry envelope emitted by Layer 1"
  },
  "schema": {
    "type": "object",
    "required": [
      "layerId",
      "temporalSeal",
      "dignityCompliance",
      "physicalEvidence",
      "hash"
    ],
    "properties": {
      "layerId": {"type": "string"},
      "temporalSeal": {"type": "string"},
      "dignityCompliance": {"type": "boolean"},
      "physicalEvidence": {
        "type": "object",
        "properties": {
          "power": {"type": "string"},
          "cooling": {"type": "string"}
        }
      },
      "hash": {"type": "string"},
      "aeipVersion": {"type": "string"},
      "governanceScope": {"type": "string"}
    }
  }
}
