{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vitest/globals", "vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/utils/*": ["utils/*"],
      "@/pages/*": ["pages/*"],
      "@/i18n/*": ["i18n/*"]
    }
  },
  "include": ["src", "scripts", "vitest.config.ts", "vite.config.ts", ".storybook"],
  "exclude": ["node_modules", "dist"]
}
