   "source": [
    "# Multi-Node AEIP Demonstration\n",
    "Simulate two personas exchanging DRR and GDS artifacts using AEIP and persisting to the local ledger."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "from protocol.aeip_handshake import AEIPHandshake\n",
    "from protocol.ledger_node import GovernanceLedgerNode\n",
    "from src.common.crypto import sha3_512_hex, temporal_seal\n",
    "from src.common.schema import load_schema, json_dumps\n",
    "from src.common.artifacts import Artifact\n",
    "\n",
    "node = GovernanceLedgerNode(node_identifier='gns://notebook/network')\n",
    "handshake = AEIPHandshake(handshake_id='network-demo', governance_scope='demo')\n",
    "steps = ['Intent', 'Justify', 'CounterSign', 'Commit', 'Update']\n",
    "personas = ['persona.alpha', 'persona.beta', 'persona.alpha', 'persona.beta', 'persona.alpha']\n",
    "for step, persona in zip(steps, personas):\n",
    "    handshake.record(step=step, persona_id=persona, payload={'message': step, 'temporalSeal': temporal_seal()})\n",
    "\n",
    "drr_schema = load_schema('schemas/drr_schema.yaml')\n",
    "drr_payload = {\n",
    "    'id': 'drr-demo',\n",
    "    'version': '1.0',\n",
    "    'source': 'persona.beta',\n",
    "    'personaId': 'persona.beta',\n",
    "    'timestamp': temporal_seal().split('::')[0],\n",
    "    'hash': '',\n",
    "    'dignityCompliance': True,\n",
    "    'decisionSummary': 'Authorize deployment',\n",
    "    'rationale': [{'step': 'analysis', 'justification': 'meets controls', 'evidence': 'tests'}]\n",
    "}\n",
    "drr_payload['hash'] = sha3_512_hex(json_dumps(drr_payload))\n",
    "Artifact(schema=drr_schema, payload=drr_payload).validate()\n",
    "node.submit_artifact(artifact_type='DRR', artifact_payload=drr_payload, handshake=handshake.to_dict())\n",
    "\n",
    "gds_schema = load_schema('schemas/gds_schema.json')\n",
    "gds_payload = {\n",
    "    'id': 'gds-demo',\n",
    "    'version': '1.0',\n",
    "    'source': 'persona.alpha',\n",
    "    'personaId': 'persona.alpha',\n",
    "    'timestamp': temporal_seal().split('::')[0],\n",
    "    'hash': '',\n",
    "    'dignityCompliance': True,\n",
    "    'directives': [{'controlId': 'ctrl-1', 'title': 'Log handshake', 'severity': 'medium', 'actions': ['log']}]
    "}\n",
    "gds_payload['hash'] = sha3_512_hex(json_dumps(gds_payload))\n",
    "Artifact(schema=gds_schema, payload=gds_payload).validate()\n",
    "node.submit_artifact(artifact_type='GDS', artifact_payload=gds_payload, handshake=handshake.to_dict())\n",
    "\n",
    "sorted(node.ledger_dir.glob('entry_*.json'))
   ]
  }
 ],
