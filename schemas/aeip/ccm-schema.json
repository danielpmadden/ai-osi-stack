{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Curated Data Stewardship Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "uuid",
    "layer",
    "timestamp",
    "custodian",
    "context_uri",
    "evidence_hash",
    "signature",
    "tags",
    "artifact_type",
    "schema_version",
    "payload_uri",
    "schema_ref",
    "datasets"
  ],
  "properties": {
    "uuid": { "type": "string" },
    "layer": { "type": "string", "enum": ["L2"] },
    "timestamp": { "type": "string" },
    "custodian": { "type": "string" },
    "context_uri": { "type": "string" },
    "evidence_hash": { "type": "string" },
    "signature": { "type": "string" },
    "schema_ref": { "type": "string", "enum": ["ccm.schema.json"] },
    "schema_version": { "type": "string" },
    "artifact_type": { "type": "string", "enum": ["data-stewardship"] },
    "payload_uri": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "provenance_system": { "type": "string" },
    "datasets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "uri", "governance_tier"],
        "properties": {
          "name": { "type": "string" },
          "uri": { "type": "string" },
          "governance_tier": { "type": "string" },
          "update_frequency": { "type": "string" },
          "quality_checks": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
