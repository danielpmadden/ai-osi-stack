{
  "canonicalMetadata": {
    "canonical_version": "AI OSI Stack v5",
    "canonical_date": "2025-11-07",
    "aeip_version": "1.3",
    "repository_of_record": "https://github.com/danielpmadden/ai-osi-stack",
    "domain_of_record": "https://aiosi.org",
    "supersedes_all_prior_metadata": true
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incident Report Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "uuid",
    "layer",
    "timestamp",
    "custodian",
    "context_uri",
    "evidence_hash",
    "signature",
    "tags",
    "artifact_type",
    "schema_version",
    "payload_uri",
    "schema_ref",
    "incident_id",
    "severity",
    "status",
    "timeline"
  ],
  "properties": {
    "uuid": {
      "type": "string"
    },
    "layer": {
      "type": "string",
      "enum": [
        "L6",
        "L7"
      ]
    },
    "timestamp": {
      "type": "string"
    },
    "custodian": {
      "type": "string"
    },
    "context_uri": {
      "type": "string"
    },
    "evidence_hash": {
      "type": "string"
    },
    "signature": {
      "type": "string"
    },
    "schema_ref": {
      "type": "string",
      "enum": [
        "incident_report.schema.json"
      ]
    },
    "schema_version": {
      "type": "string"
    },
    "artifact_type": {
      "type": "string",
      "enum": [
        "incident-report"
      ]
    },
    "payload_uri": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "incident_id": {
      "type": "string"
    },
    "severity": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "description"
        ],
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "impact": {
      "type": "string"
    },
    "remediation": {
      "type": "string"
    }
  }
}
