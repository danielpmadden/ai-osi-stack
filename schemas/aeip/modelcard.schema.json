{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Model Card Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "uuid",
    "layer",
    "timestamp",
    "custodian",
    "context_uri",
    "evidence_hash",
    "signature",
    "tags",
    "artifact_type",
    "schema_version",
    "payload_uri",
    "schema_ref",
    "model_name",
    "model_version",
    "training_data",
    "evaluation"
  ],
  "properties": {
    "uuid": { "type": "string" },
    "layer": { "type": "string", "enum": ["L3"] },
    "timestamp": { "type": "string" },
    "custodian": { "type": "string" },
    "context_uri": { "type": "string" },
    "evidence_hash": { "type": "string" },
    "signature": { "type": "string" },
    "schema_ref": { "type": "string", "enum": ["modelcard.schema.json"] },
    "schema_version": { "type": "string" },
    "artifact_type": { "type": "string", "enum": ["model-card"] },
    "payload_uri": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "model_name": { "type": "string" },
    "model_version": { "type": "string" },
    "training_data": {
      "type": "object",
      "required": ["summary", "size"],
      "properties": {
        "summary": { "type": "string" },
        "size": { "type": "string" },
        "sources": { "type": "array", "items": { "type": "string" } }
      }
    },
    "evaluation": {
      "type": "object",
      "required": ["metrics", "methodology"],
      "properties": {
        "metrics": { "type": "array", "items": { "type": "string" } },
        "methodology": { "type": "string" },
        "limitations": { "type": "string" }
      }
    },
    "reproducibility": {
      "type": "object",
      "properties": {
        "docker_image": { "type": "string" },
        "commit": { "type": "string" },
        "hardware": { "type": "string" }
      }
    }
  }
}
