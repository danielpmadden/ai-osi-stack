{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Decision Summary Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "uuid",
    "layer",
    "timestamp",
    "custodian",
    "context_uri",
    "evidence_hash",
    "signature",
    "tags",
    "artifact_type",
    "schema_version",
    "payload_uri",
    "schema_ref",
    "reporting_period",
    "decisions"
  ],
  "properties": {
    "uuid": { "type": "string" },
    "layer": { "type": "string", "enum": ["L6", "L7"] },
    "timestamp": { "type": "string" },
    "custodian": { "type": "string" },
    "context_uri": { "type": "string" },
    "evidence_hash": { "type": "string" },
    "signature": { "type": "string" },
    "schema_ref": { "type": "string", "enum": ["gds.schema.json"] },
    "schema_version": { "type": "string" },
    "artifact_type": { "type": "string", "enum": ["governance-decision-summary"] },
    "payload_uri": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "reporting_period": { "type": "string" },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" },
          "unit": { "type": "string" }
        }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "status"],
        "properties": {
          "title": { "type": "string" },
          "status": { "type": "string" },
          "summary": { "type": "string" }
        }
      }
    }
  }
}
