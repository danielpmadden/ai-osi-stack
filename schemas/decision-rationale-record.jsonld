  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decision Rationale Record",
  "description": "JSON-LD schema for AEIP Decision Rationale Record artifacts documenting deliberative justification for AI governance determinations.",
  "type": "object",
  "required": [
    "artifact_type",
    "version",
    "uuid",
    "timestamp",
    "layer",
    "issuer",
    "rationale",
    "decision_reference",
    "linked_artifacts",
    "signature",
    "provenance"
  ],
  "properties": {
    "artifact_type": {
      "type": "string",
      "const": "DecisionRationaleRecord",
      "$comment": "Restricts the record to governance decision justification artifacts."
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "$comment": "Semantic version recording the decision rationale specification iteration."
    },
    "uuid": {
      "type": "string",
      "pattern": "^(urn:uuid:)?[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
      "$comment": "Mandatory UUIDv4 identifier enabling immutable referencing across the AEIP ledger."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "$comment": "UTC timestamp capturing the moment the rationale was ratified."
    },
    "layer": {
      "type": "integer",
      "minimum": 1,
      "maximum": 7,
      "$comment": "Indicates the AI OSI Stack layer governing the decision rationale."
    },
    "issuer": {
      "type": "object",
      "required": ["name", "role", "organization", "contact"],
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "organization": { "type": "string" },
        "contact": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false,
      "$comment": "Identifies the accountable authority documenting the decision rationale."
    },
    "rationale": {
      "type": "string",
      "$comment": "Detailed justification explaining governing criteria, evidence, and trade-offs."
    },
    "decision_reference": {
      "type": "string",
      "$comment": "Unique textual or URI reference to the decision resolution or control objective."
    },
    "linked_artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^(urn:uuid:)?[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          {
            "type": "string",
            "format": "uri"
          }
        ]
      },
      "$comment": "Links to interpretive traces, audit memos, or policy directives influencing the decision."
    },
    "signature": {
      "type": "object",
      "required": ["method", "key_id", "value"],
      "properties": {
        "method": { "type": "string" },
        "key_id": { "type": "string" },
        "value": { "type": "string" }
      },
      "additionalProperties": false,
      "$comment": "Cryptographic attestation of the decision authority's endorsement."
    },
    "provenance": {
      "type": "object",
      "required": ["source_system", "collection_method", "jurisdiction"],
      "properties": {
        "source_system": { "type": "string" },
        "collection_method": { "type": "string" },
        "jurisdiction": { "type": "string" },
        "confidence": { "type": "string" }
      },
      "additionalProperties": false,
      "$comment": "Captures validation context supporting reproducibility and oversight audits."
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "artifact_type": "DecisionRationaleRecord",
