  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Governance Decision Summary",
  "description": "JSON-LD schema for AEIP Governance Decision Summary artifacts disseminating final governance outcomes for AI system lifecycle checkpoints.",
  "type": "object",
  "required": [
    "artifact_type",
    "version",
    "uuid",
    "timestamp",
    "layer",
    "issuer",
    "summary",
    "decision_outcome",
    "linked_artifacts",
    "signature",
    "provenance"
  ],
  "properties": {
    "artifact_type": {
      "type": "string",
      "const": "GovernanceDecisionSummary",
      "$comment": "Establishes the artifact as a governance outcome summary within AEIP."
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "$comment": "Semantic version documenting the summary release iteration."
    },
    "uuid": {
      "type": "string",
      "pattern": "^(urn:uuid:)?[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$",
      "$comment": "Mandatory UUIDv4 identifier ensuring consistent cross-ledger linkage."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "$comment": "UTC timestamp for the finalization of the governance decision summary."
    },
    "layer": {
      "type": "integer",
      "minimum": 1,
      "maximum": 7,
      "$comment": "Identifies the AI OSI Stack layer issuing the summary notice."
    },
    "issuer": {
      "type": "object",
      "required": ["name", "role", "independentCustodian", "contact"],
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "independentCustodian": { "type": "string" },
        "contact": { "type": "string", "format": "uri" }
      },
      "additionalProperties": false,
      "$comment": "Identifies the accountable entity publishing the summary."
    },
    "summary": {
      "type": "string",
      "$comment": "Concise articulation of the governance decision scope and significance."
    },
    "decision_outcome": {
      "type": "string",
      "$comment": "Formal statement of the decision status, mandated actions, or deferrals."
    },
    "linked_artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "type": "string",
            "pattern": "^(urn:uuid:)?[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-4[0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          {
            "type": "string",
            "format": "uri"
          }
        ]
      },
      "$comment": "Links to deliberative records, audit memos, or ledger entries informing the summary."
    },
    "signature": {
      "type": "object",
      "required": ["method", "key_id", "value"],
      "properties": {
        "method": { "type": "string" },
        "key_id": { "type": "string" },
        "value": { "type": "string" }
      },
      "additionalProperties": false,
      "$comment": "Cryptographic attestation of the summary's authenticity."
    },
    "provenance": {
      "type": "object",
      "required": ["source_system", "collection_method", "jurisdiction"],
      "properties": {
        "source_system": { "type": "string" },
        "collection_method": { "type": "string" },
        "jurisdiction": { "type": "string" },
        "confidence": { "type": "string" }
      },
      "additionalProperties": false,
      "$comment": "Documents oversight checkpoints validating the summary's issuance."
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "artifact_type": "GovernanceDecisionSummary",
      "version": "1.0.0",
      "uuid": "urn:uuid:333e4567-e89b-42d3-a456-426614174020",
